if has("autocmd")
  autocmd BufWritePost .gvimrc.after source ~/.gvimrc.after
  autocmd BufWritePost .gvimrc.after source ~/.dotfiles/vim/gvimrc.after.symlink
end
nmap <Leader>g :edit ~/.gvimrc.after<CR>


